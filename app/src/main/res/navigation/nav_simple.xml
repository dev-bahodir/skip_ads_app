<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_simple"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="dev.bahodir.skipadsapp.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_newDetailsFragment"
            app:destination="@id/newDetailsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_seeAllFragment"
            app:destination="@id/seeAllFragment" />
    </fragment>
    <fragment
        android:id="@+id/newDetailsFragment"
        android:name="dev.bahodir.skipadsapp.fragment.info.NewDetailsFragment"
        android:label="fragment_new_details"
        tools:layout="@layout/fragment_new_details" />
    <fragment
        android:id="@+id/seeAllFragment"
        android:name="dev.bahodir.skipadsapp.fragment.info.SeeAllFragment"
        android:label="fragment_see_all"
        tools:layout="@layout/fragment_see_all" />

</navigation>